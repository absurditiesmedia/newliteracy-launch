    },
    {
        name: "Business & Academic Computing Machines",
        description: "Powerful Computing Solutions for Your Business and Academic Needs",
        link: "/blog/busniness-adademic-computing/",
        image:'/blog-placeholder-4.png',
        progect:"#",
    },
    {
        name: "Customized High-End Builds",
        description: "Unleash Your Creativity with Customized High-End Builds",
        link: "/blog/custom-high-end-computers/",
        image:'/blog-placeholder-2.png',
        progect:"#",
    },
    {
        name: "Android TV Set-Top Boxes",
        description: "Welcome to the Future of Entertainment",
        link: "/blog/android-tv/",
        image:'/blog-placeholder-3.png',
        progect:"#",
    },
    {
        name: "Cutting-Edge Mobile Devices",
        description: "Stay Connected and Productive with Our Range of Mobile Devices",
        link: "/blog/cutting-edge-mobile/",
        image:'/blog-placeholder-5.png',
        progect:"#",
    },  
    {
