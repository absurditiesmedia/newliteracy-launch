<style>
    #title {
        padding: 5em 0 0 0;
		background: 
			linear-gradient(45deg, rgb(195, 2, 253) 0%, rgb(243, 70, 17) 40%, rgb(227, 0, 151) 70%);
		background-size: 200% 200%;
		animation: gradient 10s ease infinite;
		}

		@-webkit-keyframes gradient {
			0%{background-position:0% 50%}
			50%{background-position:100% 50%}
			100%{background-position:0% 50%}
		}

	.nameTitle{
		display: flex;
		flex-direction: row;
		gap: 20px;
		justify-content: center;
		align-items: center;
		font-size: 25px;
		padding: 0.8em 0;
	}
    svg{
		min-width: 2em;
	}

	#tech{
		flex-wrap: wrap;
	}
	#tech svg:hover {
		transform: scale(1.7);
		}
</style>